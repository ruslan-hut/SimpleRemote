<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/twotone_check_box_outline_blank_24"/>
                <ImageView
                    android:id="@+id/icon_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/baseline_replay_black_24"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/item_number"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/sample_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_date"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/sample_text"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_company"
                    android:maxLines="1"
                    android:textColor="@color/colorGrey"
                    android:text="@string/sample_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_warehouse"
                    android:maxLines="1"
                    android:textColor="@color/colorGrey"
                    android:text="@string/sample_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_contractor"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:text="@string/sample_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_field1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:text="@string/sample_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_field2"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/sample_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_field3"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/sample_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_field4"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/sample_text"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_text_checked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checked"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_sum"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/sample_number"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_notes"
                    android:text="@string/sample_text"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>