<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/selectDocumentTypeFragment">

    <fragment
        android:id="@+id/selectDocumentTypeFragment"
        android:name="ua.com.programmer.simpleremote.ui.selector.SelectDocumentTypeFragment"
        android:label="@string/header_documents" >
        <action
            android:id="@+id/action_selectDocumentTypeFragment_to_documentListFragment"
            app:destination="@id/documentListFragment" />
    </fragment>
    <fragment
        android:id="@+id/connectionsListFragment"
        android:name="ua.com.programmer.simpleremote.ui.connection.ConnectionsListFragment"
        android:label="@string/connections_list" >
        <action
            android:id="@+id/action_connectionsListFragment_to_connectionFragment"
            app:destination="@id/connectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/connectionFragment"
        android:name="ua.com.programmer.simpleremote.ui.connection.ConnectionFragment"
        android:label="@string/action_connection_settings" >
        <argument
            android:name="guid"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/selectCatalogTypeFragment"
        android:name="ua.com.programmer.simpleremote.ui.selector.SelectCatalogTypeFragment"
        android:label="@string/header_catalogs" />
    <fragment
        android:id="@+id/documentListFragment"
        android:name="ua.com.programmer.simpleremote.ui.document.DocumentListFragment"
        android:label="@string/header_documents" >
        <argument
            android:name="type"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>